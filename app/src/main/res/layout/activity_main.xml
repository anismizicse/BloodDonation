<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ourdreamit.blooddonationproject.ui.activities.MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:background="@drawable/login_girl_old"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/home_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/adminSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="adminSettings"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Settings" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="searchDonor"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/search_donor" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Search Donor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blood_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="bloodRequest"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/search_donor" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Blood Requests" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="profile"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/profile" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Profile" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/doctorCare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="doctorCare"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/doctor_care" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Doctor Care" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="searchDoctor"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/doctor_care" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Search Doctor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="searchHospital"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/search_donor" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Search Hospital" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="hotLine"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/hotline" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="HotLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chatActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="liveChat"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/livechat" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Live Chat" />

                </LinearLayout>
                <!--<LinearLayout-->
                <!--android:id="@+id/doctorMessages"-->
                <!--android:onClick="doctorMessages"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal"-->
                <!--android:padding="10dp"-->
                <!--android:weightSum="4"-->
                <!--android:background="@drawable/round_corner"-->
                <!--android:layout_marginBottom="8dp">-->
                <!--<ImageView-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:src="@drawable/livechat"/>-->
                <!--<TextView-->
                <!--android:layout_weight="3"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Messages"-->
                <!--style="@style/ButtonText"/>-->

                <!--</LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="myStatus"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/mystatus" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="My Status" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="tobeProud"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/tobeproud" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="To Be Proud" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:onClick="aboutUs"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/aboutus" />

                    <TextView
                        style="@style/ButtonText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="About Us" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_drawer"
        android:name="com.ourdreamit.blooddonationproject.ui.fragments.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
