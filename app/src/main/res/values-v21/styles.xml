<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:toolbarStyle">@color/tool_bar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:colorPrimaryDark">@color/status_bar</item>
    </style>

    <style name="Login" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="SocialLogin" parent="Login">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
    </style>

    <style name="CardViewMain" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>
</resources>